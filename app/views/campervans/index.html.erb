<div class="container">
  <h1>All Campervans</h1>
  <p>Unique Campervans for unique People</p>
  <%= link_to "List your van", new_campervan_path, class: 'btn btn-outline-secondary'  %>
  <% if user_signed_in? %>
    <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'btn btn-outline-secondary' %>
    <% else %>
    <%= link_to "Log in", new_user_session_path, class: 'btn btn-outline-secondary' %>
  <% end %>
  <div class="cards">
    <% @campervans.each do |campervan| %>
      <div class="card" style="width: 18rem;">
        <img src="<%= cl_image_path campervan.photo %>" class="card-img-top" alt="Image Van">
        <h3><%= link_to campervan.name, campervan_path(campervan.id) %></h3>
        <ul>
          <li><i class="fa fa-map-marker" aria-hidden="true"></i> <%= campervan.location %></li>
          <li>$<%= campervan.daily_price %>/day</li>
          <li>sleeps: <%= campervan.sleeps %></li>
          <li>belted seats: <%= campervan.belted_seats %></li>
          <li>bed type: <%= campervan.bed_type %></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>

