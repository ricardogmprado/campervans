<%= render 'partials/navbar' %>
<h1 class="booktitle">My Bookings</h1>
<div class="container">
</div>
<div class="cards w-75 mx-auto">
  <% @bookings.each do |booking| %>
  <div class="cards d-flex flex-column w-100" style="width: 18rem;">
    <img src="<%= cl_image_path booking.campervan.photo %>" class="card-img-top" alt="Image Van">
    <div class="card-body">
      <h5 class="card-title"><%= booking.campervan.name %></h5>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><%= "Start date: #{booking.start_date}" %></li>
      <li class="list-group-item"><%= "End date: #{booking.end_date}" %></li>
      <li class="list-group-item"><%= "Total Price: U$ #{booking.total_price},00" %></li>
    </ul>
    <div class="card-body">
      <a href="#" class="card-link"><%= link_to "Show booking", booking_path(booking), class: 'btn btn-outline-secondary d-flex justify-content-center'  %></a>
    </div>
  </div>

  <% end %>
</div>
  <div class="buttons-container">
   <%= link_to "Return to main page", campervans_path, class: 'btn btn-outline-secondary'  %></div>
<%= render 'partials/footer' %>
